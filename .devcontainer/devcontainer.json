{
  "name": "Flutter CFE Dev Container (Docker Hub)",
  "image": "b1cho/flutter-cfe:v1",

  "runArgs": ["--privileged", "--device=/dev/bus/usb:/dev/bus/usb"],

  "workspaceFolder": "/app",

  "mounts": [
    "source=${localWorkspaceFolder},target=/app,type=bind,consistency=cached"
  ],

  "remoteUser": "root",

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.flutter",
        "Dart-Code.dart-code",
        "ms-azuretools.vscode-docker",
        "ms-vscode.git"
      ]
    }
  },

  "postCreateCommand": "flutter pub get"
}
